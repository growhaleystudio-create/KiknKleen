---
import "../styles/global.css";
---

<!doctype html>
<html lang="id" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>KiknKleen - Premium Shoe Care</title>
        <!-- Fonts and Icons -->
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
            rel="stylesheet"
        />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body class="bg-white text-gray-800 font-sans antialiased">
        <!-- Navbar -->
        <nav
            class="fixed w-full bg-white/90 backdrop-blur-md z-50 border-b border-gray-100"
        >
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center h-20">
                    <!-- Logo -->
                    <div class="flex-shrink-0 flex items-center gap-2">
                        <i class="fa-solid fa-shoe-prints text-2xl text-black"
                        ></i>
                        <span
                            class="font-bold text-2xl tracking-tighter text-black uppercase"
                            >KiknKleen</span
                        >
                    </div>

                    <!-- Desktop Menu -->
                    <div class="hidden md:flex items-center space-x-8">
                        <a
                            href="#home"
                            class="text-gray-600 hover:text-black font-medium transition"
                            >Beranda</a
                        >
                        <a
                            href="#services"
                            class="text-gray-600 hover:text-black font-medium transition"
                            >Layanan</a
                        >
                        <a
                            href="#about"
                            class="text-gray-600 hover:text-black font-medium transition"
                            >Tentang Kami</a
                        >
                        <a
                            href="#contact"
                            class="bg-black text-white px-6 py-2.5 rounded-full font-medium hover:bg-gray-800 transition shadow-lg transform hover:-translate-y-0.5"
                        >
                            Cuci Sekarang
                        </a>
                    </div>

                    <!-- Mobile menu button -->
                    <div class="md:hidden flex items-center">
                        <button
                            id="mobile-menu-btn"
                            class="text-gray-600 hover:text-black focus:outline-none p-2"
                        >
                            <i class="fa-solid fa-bars text-2xl"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Mobile Menu Panel -->
            <div
                id="mobile-menu"
                class="hidden md:hidden bg-white border-t border-gray-100 absolute w-full z-40"
            >
                <div class="px-4 pt-2 pb-6 space-y-1 shadow-lg">
                    <a
                        href="#home"
                        class="block px-3 py-3 text-base font-medium text-gray-700 hover:bg-gray-50 rounded-md"
                        >Beranda</a
                    >
                    <a
                        href="#services"
                        class="block px-3 py-3 text-base font-medium text-gray-700 hover:bg-gray-50 rounded-md"
                        >Layanan</a
                    >
                    <a
                        href="#about"
                        class="block px-3 py-3 text-base font-medium text-gray-700 hover:bg-gray-50 rounded-md"
                        >Tentang Kami</a
                    >
                    <a
                        href="#contact"
                        class="block mt-4 text-center w-full bg-black text-white px-6 py-3 rounded-lg font-medium"
                        >Cuci Sekarang</a
                    >
                </div>
            </div>
        </nav>

        <!-- Hero Section -->
        <section
            id="home"
            class="pt-32 pb-16 lg:pt-40 lg:pb-24 overflow-hidden relative"
        >
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div
                    class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center"
                >
                    <!-- Text Content -->
                    <div
                        class="space-y-8 animate-fade-in-up order-2 lg:order-1"
                    >
                        <div
                            class="inline-block px-3 py-1 bg-gray-100 rounded-full text-xs font-semibold tracking-wide text-gray-600 uppercase mb-2"
                        >
                            Premium Shoe Care Indonesia
                        </div>
                        <h1
                            class="text-5xl lg:text-6xl font-bold leading-tight text-gray-900"
                        >
                            Outfit Udah 10/10, <br />
                            <span class="text-gray-400">Masa Sepatunya</span>
                            <br />
                            Masih 2/10?
                        </h1>
                        <p
                            class="text-lg text-gray-500 max-w-lg leading-relaxed"
                        >
                            Jangan biarin sepatu kotor rusak penampilan kerenmu.
                            KiknKleen partner perawatan sepatu profesional siap
                            balikin kilau sepatu kesayangan seperti baru.
                        </p>

                        <div class="flex flex-col sm:flex-row gap-4">
                            <a
                                href="#contact"
                                class="px-8 py-4 bg-black text-white rounded-lg font-semibold text-center hover:bg-gray-800 transition shadow-xl"
                            >
                                Cuci Sekarang! <i
                                    class="fa-solid fa-arrow-right ml-2"></i>
                            </a>
                            <a
                                href="https://wa.me/628138818306"
                                target="_blank"
                                class="px-8 py-4 bg-white border border-gray-200 text-gray-700 rounded-lg font-semibold text-center hover:bg-gray-50 transition"
                            >
                                Konsultasi Gratis
                            </a>
                        </div>

                        <!-- Stats -->
                        <div
                            class="pt-8 flex items-center gap-12 border-t border-gray-100 mt-8"
                        >
                            <div>
                                <p class="text-3xl font-bold text-gray-900">
                                    500+
                                </p>
                                <p class="text-sm text-gray-500">
                                    Sepatu Dicuci
                                </p>
                            </div>
                            <div>
                                <p class="text-3xl font-bold text-gray-900">
                                    4.9
                                </p>
                                <p class="text-sm text-gray-500">
                                    Rating Pelayanan
                                </p>
                            </div>
                            <div>
                                <p class="text-3xl font-bold text-gray-900">
                                    3
                                </p>
                                <p class="text-sm text-gray-500">
                                    Tahun Pengalaman
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Hero Image (Floating & No Background) -->
                    <div
                        class="relative lg:h-[600px] flex items-center justify-center order-1 lg:order-2"
                    >
                        <!-- Main Shoe Image with Float Animation -->
                        <img
                            src="/Nike.png"
                            alt="Nike Air Force 1 Floating"
                            class="relative z-10 w-full max-w-lg drop-shadow-2xl animate-float -rotate-12"
                        />

                        <!-- Floating Badge Card (Floats with delay) -->
                        <div
                            class="absolute bottom-10 right-0 md:right-10 bg-white/90 backdrop-blur-sm p-5 rounded-2xl shadow-xl z-20 animate-float-delayed border border-white"
                        >
                            <div class="flex items-center gap-3">
                                <div
                                    class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center"
                                >
                                    <i
                                        class="fa-solid fa-star text-accent text-sm"
                                    ></i>
                                </div>
                                <div>
                                    <p
                                        class="text-xs text-gray-400 uppercase font-semibold tracking-wider"
                                    >
                                        Top Service
                                    </p>
                                    <p class="font-bold text-gray-900">
                                        Deep Clean +
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Services Section -->
        <section id="services" class="py-20 bg-gray-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="mb-16">
                    <p
                        class="text-gray-500 uppercase tracking-widest text-sm font-semibold mb-2"
                    >
                        Layanan Kami
                    </p>
                    <h2 class="text-4xl font-bold text-gray-900">
                        Perawatan Premium <br /><span class="text-gray-400"
                            >untuk Sepatu Anda</span
                        >
                    </h2>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
                >
                    <!-- Card 1: Cuci Sepatu -->
                    <div
                        class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-xl transition duration-300 border border-transparent hover:border-gray-100 flex flex-col"
                    >
                        <div
                            class="w-14 h-14 bg-gray-100 rounded-xl flex items-center justify-center mb-6 text-black"
                        >
                            <i class="fa-solid fa-shoe-prints text-2xl"></i>
                        </div>
                        <h3 class="text-xl font-bold mb-4">
                            Layanan Cuci Sepatu
                        </h3>
                        <ul class="space-y-4 mb-6 flex-grow">
                            <li>
                                <div
                                    class="flex justify-between items-baseline"
                                >
                                    <span class="font-bold text-gray-900"
                                        >Bersih Banget</span
                                    >
                                    <span class="text-black font-bold">40K</span
                                    >
                                </div>
                                <p class="text-xs text-gray-500 mt-1">
                                    Bersihin ekstra, cocok buat material
                                    sensitif, putih kusam, atau kotor maksimal.
                                </p>
                            </li>
                            <li>
                                <div
                                    class="flex justify-between items-baseline"
                                >
                                    <span class="font-bold text-gray-900"
                                        >Bersih-Bersih</span
                                    >
                                    <span class="text-black font-bold">35K</span
                                    >
                                </div>
                                <p class="text-xs text-gray-500 mt-1">
                                    Bersihin semua bagian sepatu (luar dan
                                    dalam).
                                </p>
                            </li>
                            <li>
                                <div
                                    class="flex justify-between items-baseline"
                                >
                                    <span class="font-bold text-gray-900"
                                        >Bersihin Aja</span
                                    >
                                    <span class="text-black font-bold">30K</span
                                    >
                                </div>
                                <p class="text-xs text-gray-500 mt-1">
                                    Perawatan dasar area paling terlihat, upper
                                    dan midsole.
                                </p>
                            </li>
                            <li>
                                <div
                                    class="flex justify-between items-baseline"
                                >
                                    <span class="font-bold text-gray-900"
                                        >Sepatu Bocil</span
                                    >
                                    <span class="text-black font-bold">20K</span
                                    >
                                </div>
                                <p class="text-xs text-gray-500 mt-1">
                                    Khusus sepatu anak-anak di bawah usia 6
                                    tahun.
                                </p>
                            </li>
                        </ul>
                    </div>

                    <!-- Card 2: Restorasi -->
                    <div
                        class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-xl transition duration-300 border border-transparent hover:border-gray-100 flex flex-col"
                    >
                        <div
                            class="w-14 h-14 bg-gray-100 rounded-xl flex items-center justify-center mb-6 text-black"
                        >
                            <i class="fa-solid fa-wand-magic-sparkles text-2xl"
                            ></i>
                        </div>
                        <h3 class="text-xl font-bold mb-4">
                            Layanan Restorasi
                        </h3>
                        <ul class="space-y-4 mb-6 flex-grow">
                            <li>
                                <div
                                    class="flex justify-between items-baseline"
                                >
                                    <span class="font-bold text-gray-900"
                                        >Anti Kuning</span
                                    >
                                    <span class="text-black font-bold">60K</span
                                    >
                                </div>
                                <p class="text-xs text-gray-500 mt-1">
                                    Putihin lagi sol sepatu menguning + cuci
                                    bersih.
                                </p>
                            </li>
                            <li>
                                <div
                                    class="flex justify-between items-baseline"
                                >
                                    <span class="font-bold text-gray-900"
                                        >Ngelemin</span
                                    >
                                    <span class="text-black font-bold">50K</span
                                    >
                                </div>
                                <p class="text-xs text-gray-500 mt-1">
                                    Solusi sepatu mengelupas, lem ulang biar
                                    kuat lagi.
                                </p>
                            </li>
                            <li>
                                <div
                                    class="flex justify-between items-baseline"
                                >
                                    <span class="font-bold text-gray-900"
                                        >Jaitin</span
                                    >
                                    <span class="text-black font-bold">70K</span
                                    >
                                </div>
                                <p class="text-xs text-gray-500 mt-1">
                                    Sepatu sobek rapi lagi, jangan beli baru.
                                </p>
                            </li>
                            <li>
                                <div
                                    class="flex justify-between items-baseline"
                                >
                                    <span class="font-bold text-gray-900"
                                        >Ngecatin</span
                                    >
                                    <span class="text-black font-bold"
                                        >150K</span
                                    >
                                </div>
                                <p class="text-xs text-gray-500 mt-1">
                                    Kembaliin warna pekat sepatu seperti baru.
                                </p>
                            </li>
                        </ul>
                    </div>

                    <!-- Card 3: Cuci Tas -->
                    <div
                        class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-xl transition duration-300 border border-transparent hover:border-gray-100 flex flex-col"
                    >
                        <div
                            class="w-14 h-14 bg-gray-100 rounded-xl flex items-center justify-center mb-6 text-black"
                        >
                            <i class="fa-solid fa-bag-shopping text-2xl"></i>
                        </div>
                        <h3 class="text-xl font-bold mb-4">
                            Layanan Pencucian Tas
                        </h3>
                        <ul class="space-y-4 mb-6 flex-grow">
                            <li>
                                <div
                                    class="flex justify-between items-baseline"
                                >
                                    <span class="font-bold text-gray-900"
                                        >Ransel Kecil</span
                                    >
                                    <span class="text-black font-bold">25K</span
                                    >
                                </div>
                                <p class="text-xs text-gray-500 mt-1">
                                    Buat totebag santuy harian atau tas bocil.
                                </p>
                            </li>
                            <li>
                                <div
                                    class="flex justify-between items-baseline"
                                >
                                    <span class="font-bold text-gray-900"
                                        >Ransel Sedang</span
                                    >
                                    <span class="text-black font-bold">35K</span
                                    >
                                </div>
                                <p class="text-xs text-gray-500 mt-1">
                                    Cuci tas sekolah atau ngampus sampe bersih.
                                </p>
                            </li>
                            <li>
                                <div
                                    class="flex justify-between items-baseline"
                                >
                                    <span class="font-bold text-gray-900"
                                        >Ransel Besar</span
                                    >
                                    <span class="text-black font-bold">45K</span
                                    >
                                </div>
                                <p class="text-xs text-gray-500 mt-1">
                                    Bikin bersih-wangi lagi travel bag/carrier
                                    penuh lumpur.
                                </p>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="mt-12 text-center">
                    <a
                        href="https://wa.me/628138818306?text=Halo%20Admin%2C%20tolong%20jemput%20sepatu%2Ftas%20saya"
                        target="_blank"
                        class="inline-block px-8 py-4 bg-black text-white rounded-lg font-semibold hover:bg-gray-800 transition shadow-lg"
                    >
                        Jemput Sepatu Atau Tas Kotor <i
                            class="fa-solid fa-truck-fast ml-2"></i>
                    </a>
                </div>
            </div>
        </section>

        <!-- About/Story Section -->
        <section id="about" class="py-20">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div
                    class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center"
                >
                    <!-- Image Grid -->
                    <div class="relative">
                        <div class="grid grid-cols-2 gap-4">
                            <img
                                src="https://images.unsplash.com/photo-1597045566677-8cf032ed6634?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80"
                                class="rounded-2xl shadow-lg w-full h-64 object-cover transform translate-y-8"
                                alt="Premium Clean Sneakers"
                            />
                            <img
                                src="https://images.unsplash.com/photo-1605733513597-a8f8341084e6?auto=format&fit=crop&w=500&q=80"
                                class="rounded-2xl shadow-lg w-full h-64 object-cover"
                                alt="Shoe Care Process"
                            />
                        </div>
                        <!-- Decor element -->
                        <div
                            class="absolute -z-10 top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[110%] h-[80%] bg-gray-100 rounded-3xl"
                        >
                        </div>
                    </div>

                    <!-- Content -->
                    <div>
                        <p
                            class="text-gray-500 uppercase tracking-widest text-sm font-semibold mb-2"
                        >
                            Why Choose Us
                        </p>
                        <h2 class="text-4xl font-bold text-gray-900 mb-6">
                            Kami Tahu Cara <br />Memperlakukan <br /><span
                                class="text-gray-400">Barang Kesayanganmu</span
                            >
                        </h2>

                        <p class="text-gray-500 mb-8 leading-relaxed">
                            Di KiknKleen sepatu atau tas nggak asal disikat,
                            tapi kita kasih perawatan yang emang dibutuhin sama
                            sepatu atau tas kamu.
                        </p>

                        <div class="space-y-6">
                            <!-- Feature 1 -->
                            <div class="flex gap-4">
                                <div
                                    class="flex-shrink-0 w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center text-black"
                                >
                                    <i class="fa-solid fa-user-tie"></i>
                                </div>
                                <div>
                                    <h4 class="font-bold text-lg">
                                        Ditangani Oleh Ahlinya
                                    </h4>
                                    <p class="text-sm text-gray-500 mt-1">
                                        Shoe cleaner profesional mencuci dengan
                                        teknik khusus sampai detail terkecil.
                                    </p>
                                </div>
                            </div>
                            <!-- Feature 2 -->
                            <div class="flex gap-4">
                                <div
                                    class="flex-shrink-0 w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center text-black"
                                >
                                    <i class="fa-solid fa-gem"></i>
                                </div>
                                <div>
                                    <h4 class="font-bold text-lg">
                                        Premium Treatment
                                    </h4>
                                    <p class="text-sm text-gray-500 mt-1">
                                        Pake sabun khusus yang ampuh ngusir noda
                                        tanpa bikin material sepatu kamu rusak
                                        atau luntur.
                                    </p>
                                </div>
                            </div>
                            <!-- Feature 3 -->
                            <div class="flex gap-4">
                                <div
                                    class="flex-shrink-0 w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center text-black"
                                >
                                    <i class="fa-solid fa-virus-slash"></i>
                                </div>
                                <div>
                                    <h4 class="font-bold text-lg">
                                        Antiseptic dan Fresh
                                    </h4>
                                    <p class="text-sm text-gray-500 mt-1">
                                        Mastiin sepatu dan tas bebas bakteri dan
                                        wangi tahan lama.
                                    </p>
                                </div>
                            </div>
                            <!-- Feature 4 -->
                            <div class="flex gap-4">
                                <div
                                    class="flex-shrink-0 w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center text-black"
                                >
                                    <i class="fa-brands fa-whatsapp"></i>
                                </div>
                                <div>
                                    <h4 class="font-bold text-lg">
                                        Konsultasi Gratis
                                    </h4>
                                    <p class="text-sm text-gray-500 mt-1">
                                        Boleh tanya-tanya di WhatsApp treatment
                                        yang cocok buat sepatu dan tas kamu.
                                    </p>
                                </div>
                            </div>
                            <!-- Feature 5 -->
                            <div class="flex gap-4">
                                <div
                                    class="flex-shrink-0 w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center text-black"
                                >
                                    <i class="fa-solid fa-truck-fast"></i>
                                </div>
                                <div>
                                    <h4 class="font-bold text-lg">
                                        Gratis Jemput dan Antar
                                    </h4>
                                    <p class="text-sm text-gray-500 mt-1">
                                        Tenang duduk manis, biar kami yang
                                        jemput sepatu atau tas kotor dan antar
                                        balik pas udah kinclong.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Before After Section (Dynamic Slider) -->
        <section class="py-20 bg-gray-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div
                    class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center"
                >
                    <!-- Interactive Comparison Slider -->
                    <div class="order-2 lg:order-1 relative group select-none">
                        <div
                            id="comparison-container"
                            class="comparison-container relative w-full h-[400px] rounded-3xl overflow-hidden shadow-2xl cursor-ew-resize"
                        >
                            <!-- AFTER Image (Background) -->
                            <img
                                id="after-img"
                                src="/after-shoe.png"
                                alt="Clean Shoe"
                                class="absolute top-0 left-0 w-full h-full object-cover select-none"
                            />

                            <!-- BEFORE Image (Foreground / Clipped) -->
                            <div
                                id="before-wrapper"
                                class="absolute top-0 left-0 h-full w-1/2 overflow-hidden border-r-4 border-white/80 z-10"
                            >
                                <!-- BEFORE Image -->
                                <img
                                    id="before-img"
                                    src="/before-shoe.png"
                                    class="absolute top-0 left-0 max-w-none h-full object-cover select-none"
                                    style="width: 100%;"
                                />
                            </div>

                            <!-- Drag Handle -->
                            <div
                                id="slider-handle"
                                class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-12 h-12 bg-white rounded-full shadow-xl flex items-center justify-center z-20 pointer-events-none text-black"
                            >
                                <i
                                    class="fa-solid fa-arrows-left-right text-gray-600"
                                ></i>
                            </div>

                            <!-- Labels -->
                            <div
                                class="absolute top-6 left-6 bg-black/70 backdrop-blur-sm text-white px-4 py-1.5 rounded-full text-xs font-bold uppercase tracking-wider z-20"
                            >
                                Before
                            </div>
                            <div
                                class="absolute top-6 right-6 bg-white/90 backdrop-blur-sm text-black px-4 py-1.5 rounded-full text-xs font-bold uppercase tracking-wider z-20"
                            >
                                After
                            </div>

                            <!-- Instruction Overlay (Fades out on hover) -->
                            <div
                                class="absolute bottom-6 left-1/2 transform -translate-x-1/2 bg-black/60 backdrop-blur text-white text-xs px-4 py-2 rounded-full opacity-100 group-hover:opacity-0 transition-opacity duration-500 pointer-events-none z-20"
                            >
                                Geser untuk melihat hasil
                            </div>
                        </div>
                    </div>

                    <div class="order-1 lg:order-2">
                        <p
                            class="text-gray-500 uppercase tracking-widest text-sm font-semibold mb-2"
                        >
                            Hasil Pengerjaan
                        </p>
                        <h2 class="text-4xl font-bold text-gray-900 mb-6">
